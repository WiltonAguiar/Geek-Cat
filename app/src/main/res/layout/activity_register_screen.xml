<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/telafundo"
    tools:context="com.example.telalogin.register_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="200dp"
        android:padding="20dp"
        android:text="Bem vindo(a)!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/usuario"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:layout_marginTop="-90dp"
        android:textSize="13dp"
        android:padding="15dp"
        android:inputType="textEmailAddress"
        android:hint="Usuário"
        android:textAlignment="center"
        android:drawableLeft="@drawable/baseline_person_24"
        android:textColor="@color/black" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/emailRegistro"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="13dp"
        android:padding="15dp"
        android:hint="Email"
        android:textAlignment="center"
        android:drawableLeft="@drawable/baseline_email_24"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <EditText
            android:layout_width="171dp"
            android:layout_height="50dp"
            android:id="@+id/senharegistro"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/white"
            android:textSize="13sp"
            android:padding="15dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginEnd="15dp"/>

        <EditText
            android:id="@+id/repeatSenha"
            android:layout_width="171dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="-2"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/white"
            android:hint="Confirmar Senha"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <Button
        android:id="@+id/botaoRegistrar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:backgroundTint="@color/esqueceuSenha"
        android:padding="15dp"
        android:text="Registrar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/voltarTelaLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Já tem uma conta? Login."
        android:textSize="11sp"
        android:padding="15dp"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/Lavender"
        android:textAlignment="center"
        android:textColor="@color/Lavender"
        android:textColorHint="@color/white" />

</LinearLayout> <!-- Aqui foi adicionado o fechamento do LinearLayout principal -->
